@model CategoryModel

<h1 class="h3">Kategori oluştur</h1>
<hr>

<div class="row">
    <div class="col-md-8"> 
        <form asp-controller="Admin" asp-action="CreateCategory" method="POST">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">@*asp-for hem id'ye hem name'e Name değeri atar.(name .net tarafı için, id ise js tarafı için)*@
                </div>
            </div>       
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kategoriyi Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
